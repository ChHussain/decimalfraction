<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/decimalfraction/db" VERSION="2025051500" COMMENT="DB schema for decimalfraction">
    <TABLES>
        <!-- The XMLDB structure for the Decimal to Fraction activity -->
        <TABLE NAME="decimalfraction" COMMENT="Main table for Decimal to Fraction activity">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key"/>
                <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Course ID"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Activity name"/>
                <FIELD NAME="intro" TYPE="text" NOTNULL="false" COMMENT="Activity introduction"/>
                <FIELD NAME="introformat" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" COMMENT="Format of intro"/>
                <FIELD NAME="conversiontype" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Conversion type: fraction_to_decimal or decimal_to_fraction"/>
                <FIELD NAME="questiontext" TYPE="text" NOTNULL="true" COMMENT="Question to be answered"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Time of creation"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

        <TABLE NAME="decimalfraction_attempts" COMMENT="Stores student attempts for Decimal to Fraction">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key"/>
                <FIELD NAME="decimalfractionid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Related activity instance"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User ID of student"/>
                <FIELD NAME="questionindex" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Index of the question"/>
                <FIELD NAME="answer" TYPE="text" NOTNULL="true" COMMENT="Submitted answer"/>
                <FIELD NAME="iscorrect" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="1 if correct, 0 if not"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Submission time"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

    </TABLES>
</XMLDB>